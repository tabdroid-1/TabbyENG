#include <Tabby/Asset/AssetTypes/TextureAsset.h>
#include <Tabby/Renderer/Texture.h>

namespace Tabby {

void TextureAsset::Load()
{
    m_MarkedForLoad = false;
    m_Data = Texture2D::Create(m_Path).get();
}

void TextureAsset::Unload()
{
    if (m_Data)
        static_cast<Texture2D*>(m_Data)->Destroy();
}

bool TextureAsset::IsDataLoaded()
{
    if (m_Data)
        return static_cast<Texture2D*>(m_Data)->GetRendererID() != 0;
    else
        return false;
}

}
